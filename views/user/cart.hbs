<div class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-md-12 ">
                <div class="card shadow">
                    <div class="card-body cartdiv ">
                        <div class="container col-md-11">
                        {{!-- <div class=" shadow text-center text-white  mt-5 mb-5 "style="background-color: #ff6600;" >
                            <h6 class="mt-2 py-2">MY CART</h6>
                        </div> --}}
                        <div class="display-6 text-center p-3 mb-4">My Cart</div> 
                        
                        </div>
                        {{#if cartItems}}
                            {{#each cartItems}}
                                <div class="container pe-5 row text-center product_data ">
                                     
                                    <div class="col-md-2 my-auto text-center">
                                        <img src="/product-image/{{this.product._id}}.jpg" height="70px" width="70px" alt="pimage">
                                    </div>
                                    <div class="col-md-2 my-auto ">
                                        <a href="#" >
                                            <a>{{this.product.title}}</a>
                                        </a>
                                        <!-- <input type="text" value="{{i.product.category.slug}}">  -->
                                    </div>
                                        
                                    
                                    <div class="col-md-3 text-center ">
                                        <div class="text-center">
                                            {{!-- <input type="hidden"value='{{ i.product.id }}'class="prod_id"> --}}
                                                <label for="">Quantity</label>
                                                <div class="input-group text-center   justify-content-center  " >
                                                    <button class="input-group-text  decrement-btn"onclick="minusFromCart('{{this.product._id}}')">-</button>
                                                    <span style="width: 50px; background:#E5E7E9 ;border-color : #E5E7E9; " id="{{this.product._id}}">{{this.quantity}}</span>
                                                    {{!-- <input type="text " name="quantity" style="width: 50px; background:#E5E7E9 ;border-color : #E5E7E9; " class="qty_input  text-center " id="{{this.product._id}}" value="{{this.quantity}}"> --}}
                                                    <button class="input-group-text  increment-btn"onclick ='plusFromCart("{{this.product._id}}")'>+</button>
                                                </div>
                                            
                                        </div>
                                    </div>
                                    <div class="col-md-3 my-auto ">
                                        <h6>Rs:{{this.product.price}}/-</h6>
                                    </div>
                                    <div class="col-md-2 my-auto">
                                        <button class="btn btn-outline-danger delete-cart-item "onclick = 'removeFromCart("{{this._id}}","{{this.product._id}}","{{this.quantity}}")'><i class="fa-solid fa-trash"></i>  Remove</button>

                                    </div>
                                <hr>
                                </div>
                                
                            {{/each}}
                            <div class="container ">
                                <h5 class="text-center">Total Rs : <span id="carttotal">{{total}}</span>/-</h5>
                            </div>
                            <div class="text-center">
                                 <a href="/placeorder"class=" btn btn-outline-success ">Place Order</a>
                            </div>
                        
                        {{else}}
                            <h4 class="text-center">Is Empty</h4>
                        {{/if}}
                        
                                
                        
                            
                            
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>