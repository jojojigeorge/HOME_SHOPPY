    <div class="py-5">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <dic class="  card shadow product_data">
                        <dic class="card-body">
                            <div class="row">
                                <div class="col-md-4">
                                    
                                    <h3>
                                        <span class="position-absolute top-0 start-0 translate-middle badge rounded-pill bg-danger">
                                        {{product.tag}}
                                    </span>
                                    </h3>
                                    <img src="/product-image/{{product._id}}.jpg" class='w-100'alt="Card image cap">
                                    {{#if products.tag }}
                                        <label class="px-2"style="background-color:red;color:#ffff; font-weight:600; position: absolute; text-transform:uppercase; ">{{product.tag}}</label>
                                    {{/if}}

                                </div>

                                <div class="col-md-8">
                                    <h2 class="mb=0 float-left">
                                        {{product.title}}
                                        {{#if product.trending }}
                                            <label class="float-end mx-4 badge  trending_tag" style="color:#ffff;background-color:red; ">Trending</label>
                                        {{/if}}
                                    </h2>
                                    
                                    <label class=" ">{{ product.smalldecription }}</label>
                                    <hr >
                                    <div>
                                        <label class=" float-left">Selling Price : Rs{{ product.sellprice}}</label>
                                        <label class=" float-end mr-5">Original Price : <s>Rs{{ product.price }}</s></label>
                                        <br><br>
                                        <label for="">{{product.smalldescription}}</label>
                                    </div>
                                    
                                    <hr class="mt-5">
                                    <div class="">
                                        {{!-- {% if product.quantity > 0 %} --}}
                                        {{#if product.available}}
                                            <label class="badge bg-success"style="color:#ffff;">Instock</label>
                                        {{else}}
                                            <label class="badge bg-danger">Out of stock</label>
                                        {{/if}}
                                    </div>
                                    <form action="/view-product-details" method="post">
                                        <div class="mt-2">
                                            <input name="prodId" type="hidden"value='{{ product._id }}'class="prod_id">
                                            <input name="adminId" type="hidden"value='{{ product.adminId }}'class="">
                                            {{#if product.available }}
                                                <div class="">
                                                    <label for="Quantity">Quantity</label>
                                                    <div class="input-group text-center mb-3" >
                                                        <button type="button" class="input-group-text "onclick ='decrementBtn()'>-</button>
                                                        <input type="" name="quantity"id="quantity_id" style="width: 50px ;background:#E5E7E9 ;border-color : #E5E7E9; "class="qty_input  text-center" value="1">
                                                        <button type="button" class="input-group-text "onclick ='incrementBtn()'>+</button>
                                                    </div>
                                                </div>
                                            {{/if}}
                                            <div class="col-md-9">
                                                <br>
                                                {{#if product.available}}
                                                    <button type="submit" class=" btn btn-primary me-3 float-start">Add to Cart <i class="fa-solid fa-cart-shopping"></i> </button>
                                                {{/if}}
                                                <button type="button" class=" btn btn-success me-3 float-start">Add to Wishlist <i class="fa-sharp fa-solid fa-heart"></i></button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <hr>
                                <h3>
                                    Description
                                </h3>
                                <p class="mt-3">
                                    {{ product.description }}
                                </p>
                            </div>
                        </dic>
                    </dic>
                </div>
            </div>
        </div>
    </div>
   

    
    
    